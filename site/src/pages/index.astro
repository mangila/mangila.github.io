---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import erikolsson from "../assets/erikolsson.jpeg";
import { GITHUB_USERNAME } from "../shared/utils";
import {
  getGitHubReadmeAsync,
  convertMarkdownToHtmlAsync,
} from "../shared/github.ts";

const readme = await getGitHubReadmeAsync(GITHUB_USERNAME, GITHUB_USERNAME);
const markdownHtml = await convertMarkdownToHtmlAsync(readme.content);
---

<Layout>
  <div class="flex justify-center">
    <div class="hero min-h-screen">
      <div class="hero-content flex-col lg:flex-row-reverse">
        <figure>
          <Image
            src={erikolsson}
            alt="Erik Olsson"
            loading="eager"
            format="webp"
            quality="mid"
            layout="constrained"
            class="rounded-lg shadow-2xl"
          />
        </figure>
        <div class="prose prose-md">
          <Fragment set:html={markdownHtml} />
        </div>
      </div>
    </div>
  </div>
</Layout>
